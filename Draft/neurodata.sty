  color=black,
  opacity=1,
  angle=0,
  position=current page.south,
  vshift=50pt,
  contents={%
  \small\normalfont%
  \begin{minipage}{.92\textwidth}
  \parbox[b]{.6\textwidth}{%
    \thepage}\hfill
  \small\sffamily
  \parbox[b]{.4\textwidth}{%
    \raggedleft NeuroData}
  \end{minipage}\hspace{.01\textwidth}
  \begin{minipage}{.07\textwidth} \raggedright
	\href{http://neurodata.io}{\includegraphics[height=35pt]{neurodata_small.png}}
  \end{minipage}%
  }
}

